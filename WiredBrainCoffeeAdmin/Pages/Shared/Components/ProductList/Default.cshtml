@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WiredBrainCoffeeAdmin.Data

@model List<Product>

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Short Description
        </th>
        <th>
            Price
        </th>
        <th>
            Category
        </th>
        <th>
            Image
        </th>
        <th>
            Edit
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {<tr>
            <td>
                @product.Name
            </td>
            <td>
                @product.ShortDescription
            </td>
            <td>
                @product.Price
            </td>
            <td>
                @product.Category
            </td>
            <td>
                @{
                    var image = "/images/menu/" + @product.ImageFile;
                }
                <img src="@image" />"
            </td>
            <td>
                <a class="btn btn-warning" asp-page="EditProduct" asp-route-id="@product.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>