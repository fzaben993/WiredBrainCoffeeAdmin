@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid dashboard">
    <h1 class="h2">Welcome to Wired Brain Coffee!</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h2>Latest Product</h2>
            <vc:product-list count="4" />

            <h2>Latest Survey Result</h2>
            <table class="table table-striped table-bordered">
                @foreach (var item in Model.SurveyItems)
                {
                    <tr>
                        <td>@item.Question</td>
                        <td>@item.Answer</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    The Basics
                </div>
                <div class="card-body">
                    <p>hello today is @DateTime.Today.ToString("MM/dd/yyyy")</p>
                    @{
                        var temperature = 58;
                    }
                    <p>The current temperature is @temperature degrees.</p>
                    @if (temperature < 60)
                    {
                        <p>We recommend a coat until it warms up another @(65 - temperature) degrees!</p>
                    }
                    
                </div>
            </div>
                <partial name="HelpWidget"/>
        </div>
    </div>
</div>